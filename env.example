# Polymarket Arbitrage Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# POLYMARKET API CREDENTIALS
# ===========================================
# Get these from your Polymarket account
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here

# ===========================================
# WALLET CONFIGURATION
# ===========================================
# Your Polygon wallet private key (WITHOUT 0x prefix)
# WARNING: Keep this secure! Never commit to git!
PRIVATE_KEY=your_private_key_here

# Your wallet address (for validation)
WALLET_ADDRESS=0xYourWalletAddress

# ===========================================
# POLYGON RPC
# ===========================================
# Alchemy, QuickNode, or other Polygon RPC endpoint
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Minimum edge in basis points to execute (50 = 0.5%)
MIN_EDGE_BPS=50

# Maximum position size in USDC per trade
MAX_POSITION_SIZE=100

# Maximum concurrent open orders
MAX_CONCURRENT_ORDERS=5

# ===========================================
# RISK CONTROLS
# ===========================================
# Simulation mode - detect opportunities but don't execute trades
SIMULATION_MODE=true

# Kill switch - set to "true" to stop all trading
KILL_SWITCH=false

# Minimum wallet balance in USDC to continue trading
MIN_WALLET_BALANCE=50

# Cooldown period in seconds after failed trade
COOLDOWN_SECONDS=30

# ===========================================
# AZURE CONFIGURATION (for production)
# ===========================================
# Azure Key Vault name (if using Azure secrets)
AZURE_KEYVAULT_NAME=

# ===========================================
# LOGGING
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable JSON logging for Azure Log Analytics
JSON_LOGGING=true
